{
  "manifest_version": 3,
  "name": "ChatLLM Enter Modifier",
  "version": "1.0",
  "description": "Enter → Shift + Enter (New line), CMD + Enter → Enter (Submit)",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "32": "icons/icon32.png",
    "38": "icons/icon38.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["*://apps.abacus.ai/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
